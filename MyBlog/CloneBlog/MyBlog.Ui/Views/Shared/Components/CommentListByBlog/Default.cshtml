@model IEnumerable<MyBlog.Entities.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
       @foreach (var item in Model)
        {
    <div class="media">
     
            <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <h6 class="mt-0">@item.CommentTitle</h6>
                <p>
                    @item.CommentContent
                </p>

             
            </div>
      
    </div>
  }
</div>